<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= category.toUpperCase() %> Services</title>
  <link rel="stylesheet" href="/css/services.css">
</head>
<body>

  <h1><%= category.toUpperCase() %> Services</h1>

  <% if (services && services.length > 0) { %>
    <div class="grid">
      <% services.forEach(service => { %>
        <div class="card">
          <img src="<%= service.image %>" alt="<%= service.name %>">

          <div class="name"><%= service.name %></div>
          <div class="price">₹ <%= service.price %></div>
          <div class="desc"><%= service.desc %></div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="no-data">No services found in this category.</p>
  <% } %>

  <div style="text-align:center;margin-top:2rem;">
    <a href="/home" style="text-decoration:none;font-weight:bold;">← Back to Categories</a>
  </div>

</body>
</html>
